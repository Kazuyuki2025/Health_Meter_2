<h1>動画一覧</h1>

<ul class="list-unstyled">
  <% @videos.each do |video| %>
    <li class="mb-3">
      <div class="d-flex gap-2">
      <%= link_to video.title, video_path(video), class: "btn btn-outline-primary me-2" %>

      <div class="d-flex gap-2 mt-2">
      <%= link_to "編集", 
          edit_video_path(video), 
          class: "btn btn-secondary btn-sm" %>
        <%= button_to "削除", 
          video_path(video), 
          method: :delete,
          class: "btn btn-danger btn-sm",
          data: { turbo_confirm: "本当に削除しますか？" } %>
          </div>
      </div>
    </li>
  <% end %>
</ul>


<%= link_to '新規作成（動画アップロード）', new_video_path, class: "btn btn-primary" %>
<div class="mt-3">
  <%= link_to '演者一覧', performers_path, class: 'btn btn-secondary' %>
</div>
