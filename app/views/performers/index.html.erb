<h1>演者一覧</h1>

<% if @performers.present?%>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>名前</th>
      </tr>
    </thead>
    <tbody>
      <% @performers.each do |performer| %>
        <tr>
          <td><%= performer.num %></td>
          <td><%= performer.name %></td>
        </tr>
        <tr>
          <td colspan="2">
            <div class="d-flex gap-2">
              <%= link_to '編集', edit_performer_path(performer), class: 'btn btn-warning btn-sm' %>
              <%= button_to '削除', 
              performer_path(performer), method: :delete, 
              class: "btn btn-danger btn-sm",
              data: { turbo_confirm: '本当に削除しますか？' } %>
              </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>演者が登録されていません。</p>
<% end %>

<%= link_to '新規演者登録', new_performer_path, class: 'btn btn-primary' %>
  <div class="mt-3">
    <%= link_to '動画一覧', videos_path, class: 'btn btn-secondary' %>
  </div>
